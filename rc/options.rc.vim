" Don't create backup.
set nowritebackup
set nobackup
set noswapfile
set backupdir-=.

" Smart tab setting.
set smarttab
" Exchange tab to space.
set expandtab
" Autoindent width
set shiftwidth=4
" Round indent by shiftwidth.
set shiftround

" Enable smart indent
set autoindent smartindent
 
" Show candidate
set nowildmenu
set wildmode=list:longest,full

